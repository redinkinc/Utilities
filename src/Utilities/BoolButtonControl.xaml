        <Button Name="BoolButton" Width="80" Height="30" Content="Bool" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="BoolButton_OnMouseDown" MouseUp="BoolButton_OnMouseUp" />
    </StackPanel>
</UserControl>